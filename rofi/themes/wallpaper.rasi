@import "../source.rasi"

element-text, element-icon, mode-switcher {
    background-color: inherit;
    text-color: inherit;
}

/* Fullscreen clean */
window {
    fullscreen: true;
    background-color: @bg-transparent-col;
}

/* Layout utama */
mainbox {
    background-color: inherit;
    padding: 40px;
    // spacing: 12px;
    children: [listview, inputbar];
}

/* Input bar */
inputbar {
    children: [prompt, entry];
    // spacing: 10px;
    background-color: @bg-col;
    border-radius: 8px;
    padding: 7px 10px;
}

/* Prompt kiri */
prompt {
    background-color: @accent-1;
    padding: 8px 10px;
    text-color: @bg-col;
    border-radius: 6px;
}

/* Entry text */
entry {
    padding: 8px;
    placeholder: "Search wallpapers...";
    text-color: @fg-col;
    background-color: @bg-col;
    border-radius: 4px;
}

/* List (preview area) */
listview {
    columns: 2;
    spacing: 14px;
    background-color: transparent;
}

/* Element wallpaper (gambar doang) */
element {
    padding: 20px;
    background-color: transparent;
    border-radius: 12px;
    orientation: vertical;
}

element-text{
  vertical-align: 0.5;
  horizontal-align: 0.5;
  text-color: @fg-col;
}

/* Thumbnail bigger */
element-icon {
    size: 560px;
    border-radius: 12px;
}

/* Selected wallpaper (highlighted) */
element selected, element-text selected {
    background-color: @alt-bg-selected-col;
    text-color: @bg-col;
}


